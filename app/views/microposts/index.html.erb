<h1>微博</h1>

<%= render 'form' %>
<table class="table">
  <tr>
    <th>姓名</th>
    <th>内容</th>
    <th>时间</th>
    <th></th>
    <th></th>
  </tr>

<% @microposts.each do |micropost| %>
  <tr>
    <td><%=link_to micropost.user.name, micropost.user %></td>
    <td><%= link_to micropost.content, micropost %></td>
    <td><%= micropost.created_at.localtime.to_s(:db) %></td>
    <td><%= link_to '详细', micropost %></td>
    <% if current_user?(micropost.user) %>
     <td><%= link_to '删除', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>




