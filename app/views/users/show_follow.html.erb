<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
     
      <h1><%= @user.name %></h1>
      <span><%= link_to "个人资料", @user %></span>
      <span><b>微博:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>